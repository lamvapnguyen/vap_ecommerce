		if (has1PayVn == 0) $('#gw_1payvn').hide();
		
		$("#ucUpdateSetting5_d_HtmlContent .ioc_select").each(function(){ $(this).val($(this).attr("val")); });
	
		load_setting_editor('pay_gateway_5102_vn');
		load_setting_editor('pay_gateway_5102_en');
		load_setting_editor('pay_gateway_5111_vn');
		load_setting_editor('pay_gateway_5111_en');
		load_setting_editor('pay_gateway_5112_vn');
		load_setting_editor('pay_gateway_5112_en');
